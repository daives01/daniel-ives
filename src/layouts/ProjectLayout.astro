---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <div class="p-4">
    <h1 transition:name="my-projects" class="text-4xl font-bold text-transparent pb-2">
    <span class="bg-gradient-to-t from-accent-foreground2 to-primary-foreground dark:from-accent-foreground dark:to-accent-foreground2 bg-clip-text">
      <a href="/projects">My Projects</a> > {frontmatter.title}
    </span>
    </h1>
    <p>{frontmatter.date}</p>
    <p class="max-w-48"><em>{frontmatter.description}</em></p>
  <div class="flex justify-start gap-4">
    {
      frontmatter.quickLinks?.map((link) => (
        <a href={link.link}>
          <span class="text-sm text-accent-foreground">{link.title}</span>
        </a>
      ))
    }
  </div>
  </div>
    <article class="p-4 max-w-3xl self-center prose prose-slate dark:prose-invert">
      <slot />
    </article>
  </div>
</BaseLayout>
