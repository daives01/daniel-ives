---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <p class="mb-4">
    <a href="/projects">‚Üê Back to projects</a>
  </p>
  
  <h1 class="text-4xl font-bold mb-2">{frontmatter.title}</h1>
  <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">{frontmatter.date}</p>
  <p class="mb-4 italic">{frontmatter.description}</p>
  
  {frontmatter.quickLinks && (
    <div class="mb-6 space-x-4">
      {frontmatter.quickLinks.map((link) => (
        <a href={link.link}>{link.title}</a>
      ))}
    </div>
  )}
  
  <article class="prose prose-slate max-w-none">
    <slot />
  </article>
</BaseLayout>
