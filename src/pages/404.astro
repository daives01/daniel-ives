---
import BaseLayout from "@/layouts/BaseLayout.astro";
import danielAvs from "@/assets/daniel-avs-bad.png";
import danielNuggets from "@/assets/daniel-nuggets-bad.png";
import { Image } from "astro:assets";
---

<BaseLayout>
  <div class="flex items-center justify-center h-screen animate-fade-in">
    <div class="flex flex-col md:flex-row items-center justify-center">
      <div class="w-1/4 max-w-md aspect-auto overflow-hidden rounded-2xl mx-8">
        <Image src={danielAvs} alt="Daniel Avs" class="object-cover" quality={"low"}/>
      </div>
      <div class="flex flex-col justify-center text-center p-4">
        <h1 class="text-4xl font-bold mb-4">Ruh Roh!</h1>
        <h2 class="text-2xl font-bold mb-4">This page doesn't exist.</h2>
        <a href="/">
          <h2 class="text-2xl font-bold mb-4 text-accent-foreground">Go back home</h2>
        </a>
      </div>
      <div class="w-1/4 max-w-md aspect-auto overflow-hidden rounded-2xl mx-8">
        <Image src={danielNuggets} alt="Daniel Nuggets" class="object-cover" quality={'low'}/>
      </div>
    </div>
  </div>
</BaseLayout>
