---
import BaseLayout from "@/layouts/BaseLayout.astro";

const software = [
  { name: "Excalidraw", url: "https://excalidraw.com" },
  { name: "Neovim", url: "https://neovim.io" },
  { name: "t3.chat", url: "https://t3.chat" },
];

const hardware = [
  { name: "Lily58 Split Keyboard", url: "https://typeractive.xyz/pages/build/lily58" },
  { name: "The Apple built-in trackpad", url: "#" },
  { name: "The Apple laptop display", url: "#" },
];
---

<BaseLayout>
  <nav class="hidden md:block mb-8 pb-4 border-b border-gray-200 dark:border-gray-700">
    <a href="/" data-astro-prefetch>‚Üê Back to home</a>
  </nav>
  
  <h1 class="text-4xl font-bold mb-6">Tools I Like</h1>
  
  <h2 class="font-bold mb-4">Software</h2>
  <ul class="mb-8 space-y-2 list-disc list-inside">
    {software.map((tool) => (
      <li>
        <a 
          href={tool.url} 
          target="_blank" 
          rel="noopener noreferrer"
        >
          {tool.name}
        </a>
      </li>
    ))}
  </ul>
  
  <h2 class="font-bold mb-4">Hardware</h2>
  <ul class="space-y-2 list-disc list-inside">
    {hardware.map((tool) => (
      <li>
        {tool.url === "#" ? (
          tool.name
        ) : (
          <a 
            href={tool.url} 
            target="_blank" 
            rel="noopener noreferrer"
          >
            {tool.name}
          </a>
        )}
      </li>
    ))}
  </ul>
</BaseLayout>
