---
import daniel from "@/assets/daniel.jpg";
import daniel2 from "@/assets/daniel-2.jpg";
import { Image, getImage } from "astro:assets";

const optimizedImage = await getImage({
  src: daniel2,
  format: "webp",
  quality: 75,
});
---

<div class="grid grid-cols-1 md:grid-cols-3 justify-center align-middle items-center gap-4 h-full">
  <div class="flex flex-col h-full justify-center align-middle text-center">
    <h2 class="text-4xl font-bold">
      <span>Hi,</span><span> I'm</span>
    </h2>
    <h1 class="text-6xl font-bold text-transparent">
      <span class="bg-gradient-to-t from-accent-foreground2 to-primary-foreground dark:from-accent-foreground dark:to-accent-foreground2 bg-clip-text">Daniel Ives.</span>
    </h1>
    <div class="hidden md:flex flex-col md:flex-row justify-center align-middle gap-4 p-12">
      <h2 transition:animate="fade" class="text-xl font-bold text-center text-accent-foreground hover:scale-110 transition duration-700 hover:duration-100 hover:drop-shadow-lg hover:dark:shadow-accent-foreground ">
        <a href="/about">About Me</a>
      </h2>
      <h2 transition:name="my-projects" class="text-xl font-bold text-center text-accent-foreground hover:scale-110 transition duration-700 hover:duration-100 hover:drop-shadow-lg hover:dark:shadow-accent-foreground ">
        <a href="/projects">My Projects</a>
      </h2>
    </div>
  </div>
  <Image
    src={daniel}
    transition:name="image"
    alt="Daniel Ives"
    class="m-auto w-3/4 md:w-fit xl:w-5/6 h-auto rounded-full md:rounded-3xl object-cover object-top"
  />
  <div transition:name="text-body" class="text-center drop-shadow-lg">
    <p class="text-4xl text-foreground">software engineer</p>
    <p class="text-xl text-foreground opacity-80">husband</p>
    <p class="text-xl text-foreground opacity-70">musician</p>
    <p class="text-xl text-foreground opacity-60">rock climber</p>
    <p class="text-xl text-foreground opacity-50">slack emoji aficionado</p>
    <p class="text-xl text-foreground opacity-40">neovim enjoyer</p>
    <p class="text-xl text-foreground opacity-30">excalidraw enthusiast</p>
    <p class="text-xl text-foreground opacity-20">smiling while crouching</p>
    <p class="text-xl text-foreground opacity-10">typeracer 100+ WPM club member</p>
  </div>
  <div class="flex md:hidden flex-col md:flex-row justify-center align-middle gap-4 p-12">
    <h2 class="text-xl font-bold text-center text-accent-foreground">
      <a href="/about" data-astro-prefetch="viewport">About Me</a>
    </h2>
    <h2 class="text-xl font-bold text-center text-accent-foreground">
      <a href="/projects">My Projects</a>
    </h2>
  </div>
</div>
