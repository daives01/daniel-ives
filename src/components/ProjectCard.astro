---
const { data, url } = Astro.props;
---

<div
  class="bg-card flex flex-col justify-between transition hover:shadow-2xl hover:scale-105 border dark:border-none transition-hover rounded-lg w-64 p-4"
>
  <a href={url}>
    <h1 class="text-xl font-bold text-foreground">
      <span>{data.title}</span>
    </h1>
    <div class="col-span-2">
      <p class="text-sm text-muted-foreground">{data.date}</p>
    </div>
    <p class="text-sm text-muted-foreground py-4">{data.description}</p>
  </a>

  <div class="flex justify-start gap-4">
    {
      data.quickLinks?.map((link) => (
        <a href={link.link} class="hover:scale-105 transition transition-hover">
          <span class="text-sm text-accent-foreground">{link.title}</span>
        </a>
      ))
    }
  </div>
</div>
