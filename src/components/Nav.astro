---
import Search from "./Search/Search";
import favicon from "../../public/favicon.png"
---

<div class="flex h-16 justify-between align-middle p-4 initial-fade">
  <p class="inline-flex">
    <a role="button" href="/" class="-mt-3">
      <img src={favicon.src} alt="logo" class="h-12 rounded-full hover:scale-110 transition duration-700 hover:duration-100 hover:shadow-lg" />
    </a>
  </p>
  <Search client:only="react" />
</div>


<style>
  @keyframes fade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  body.first-time-fade .initial-fade {
    opacity: 0;
    animation: fade 1s ease-in-out forwards;
    animation-delay: 4.5s;
  }


</style>